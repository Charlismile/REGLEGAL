@page "/comite/editar/{id:int}"
@using REGISTROLEGAL.Models.Entities.BdSisLegal
@using REGISTROLEGAL.Models.LegalModels
@inject DbContextLegal _context
@inject NavigationManager Navigation

<h3>Editar Comité</h3>

@if (cModel == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <EditForm Model="@cModel" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nombre Comité</label>
            <InputText class="form-control" @bind-Value="cModel.NombreComiteSalud" />
            <ValidationMessage For="@(() => cModel.NombreComiteSalud)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Comunidad</label>
            <InputText class="form-control" @bind-Value="cModel.Comunidad" />
            <ValidationMessage For="@(() => cModel.Comunidad)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Número Resolución</label>
            <InputText class="form-control" @bind-Value="cModel.NumeroResolucion" />
            <ValidationMessage For="@(() => cModel.NumeroResolucion)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha Resolución</label>
            <InputDate class="form-control" @bind-Value="cModel.FechaResolucion" />
            <ValidationMessage For="@(() => cModel.FechaResolucion)" />
        </div>

        <button type="submit" class="btn btn-success">Guardar Cambios</button>
        <button type="button" class="btn btn-secondary" @onclick="Volver">Cancelar</button>
    </EditForm>
}

