@page "/Dashboard"
@layout EmptyLayout
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@attribute [Authorize(Roles = "user_admin, user_estandar")]

<PageTitle>Dashboard</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0 fw-bold">MINISTERIO DE SALUD</h4>
                    <small>Sistema de Registro de Comités de Salud y Asociaciones Sin Fines de Lucro</small>
                </div>
                <div class="card-body bg-light text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-4 text-primary"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Bienvenido, @LoggedUser.FirstName @LoggedUser.LastName</h5>
                    <p class="text-muted mb-4">
                        <i class="bi bi-building"></i>Departamento: <strong>@UnidadUser</strong>
                    </p>

                    <!-- Botón Listado - Visible para ambos roles -->
                    <button class="btn btn-outline-primary px-4 py-2 fw-semibold shadow-sm mb-3"
                            @onclick="IrAListado">
                        <i class="bi bi-list-ul me-2"></i> Ver Listado
                    </button>

                    <!-- Sección de Trámites -->
                    <div class="mt-4">
                        <h6 class="text-muted mb-3">Trámite para comités de salud</h6>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary px-4 py-2 fw-semibold shadow-sm"
                                    @onclick="IrAPersoneria">
                                <i class="bi bi-file-earmark-plus me-2"></i> Personería
                            </button>
                            <button class="btn btn-primary px-4 py-2 fw-semibold shadow-sm"
                                    @onclick="IrACambioDirectiva">
                                <i class="bi bi-arrow-repeat me-2"></i> Cambio de Junta Directiva
                            </button>
                            <button class="btn btn-primary px-4 py-2 fw-semibold shadow-sm"
                                    @onclick="IrAJuntaInterventora">
                                <i class="bi bi-shield-exclamation me-2"></i> Junta Interventora
                            </button>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    <!-- Sección de Asociaciones -->
                    <div class="mt-4">
                        <h6 class="text-muted mb-3">Registrar Asociación</h6>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary px-4 py-2 fw-semibold shadow-sm"
                                    @onclick="IrACreacionAsociacion">
                                <i class="bi bi-file-earmark-plus me-2"></i> Asociación
                            </button>
                        </div>
                    </div>

                    <!-- Botones solo para user_admin -->
                    <AuthorizeView Roles="user_admin">
                        <Authorized>
                            <hr class="my-4" />
                            <h6 class="text-muted mb-3">Gestión de Usuarios</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success px-4 py-2 fw-semibold shadow-sm"
                                        @onclick="IrAUsuarios">
                                    <i class="bi bi-person-circle me-2"></i> Ver Usuarios
                                </button>
                                <button class="btn btn-success px-4 py-2 fw-semibold shadow-sm"
                                        @onclick="IrACreacion">
                                    <i class="bi bi-person-fill-add me-2"></i> Crear Usuario
                                </button>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
                <div class="card-footer text-center bg-white border-0 pb-3">
                    <small class="text-muted">© @DateTime.Now.Year Ministerio de Salud - República de Panamá</small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void IrAListado() => Navigation.NavigateTo("/admin/listado");
    private void IrAPersoneria() => Navigation.NavigateTo("/tramites/personeria");
    private void IrACambioDirectiva() => Navigation.NavigateTo("/tramites/cambio-directiva");
    private void IrAJuntaInterventora() => Navigation.NavigateTo("/tramites/junta-interventora");
    private void IrAUsuarios() => Navigation.NavigateTo("/user/index");
    private void IrACreacion() => Navigation.NavigateTo("/user/createuser");
    private void IrACreacionAsociacion() => Navigation.NavigateTo("/formulario/registro-asociacion");
}