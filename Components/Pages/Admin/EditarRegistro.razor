@page "/editar/{Id:int}"
@using REGISTROLEGAL.Services
@using REGISTROLEGAL.Components.Componente
@inject IRegistroAsociacionService RegistroService
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime

<h3>Editar Registro de Asociación</h3>

<EditForm Model="@Model" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary Class="alert alert-danger mb-3" />

    @if (Cargando)
    {
        <div class="alert alert-info">Cargando datos...</div>
    }
    else if (Error != null)
    {
        <div class="alert alert-danger">@Error</div>
    }
    else
    {
        <EditRegistroAsociacionContent @ref="formContent" Model="@Model" Cancelar="@Cancelar" />
    }
</EditForm>

