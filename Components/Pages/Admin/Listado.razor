@page "/listado"
@using Microsoft.EntityFrameworkCore
@using REGISTROLEGAL.Models.Entities.BdSisLegal
@inject DbContextLegal _context
@inject NavigationManager NavigationManager

<PageTitle>Listado</PageTitle>

<div class="container mt-4">
    <h3 class="mb-3 text-primary">Listados del Sistema</h3>

    <!-- Selector de tipo de listado -->
    <div class="mb-4">
        <label class="form-label fw-semibold">Seleccione qué desea ver:</label>
        <select class="form-select w-auto d-inline-block"
                @bind="tipoSeleccionado"
                @bind:after="async () => await CargarDatos()">
            <option value="">-- Seleccione --</option>
            <option value="Comites">Comités</option>
            <option value="Asociaciones">Asociaciones</option>
        </select>
    </div>

    <!-- Mostrar tabla de Comités -->
    @if (tipoSeleccionado == "Comites" && comites?.Any() == true)
    {
        <h5 class="text-success mb-3">Listado de Comités</h5>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre del Comité</th>
                    <th>N° Resolución</th>
                    <th>Fecha de Creación</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in comites)
                {
                    <tr>
                        <td>@c.NombreComiteSalud</td>
                        <td>@c.NumeroResolucion</td>
                        <td>@(c.FechaRegistro.ToString("dd/MM/yyyy") ?? "-")</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-primary"
                                    @onclick="() => EditarComite(c.DcomiteId)">
                                <i class="bi bi-pencil-square"></i> Editar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (tipoSeleccionado == "Comites" && !cargando && (comites == null || !comites.Any()))
    {
        <div class="alert alert-warning mt-3">No hay comités registrados.</div>
    }

    <!-- Mostrar tabla de Asociaciones -->
    @if (tipoSeleccionado == "Asociaciones" && asociaciones?.Any() == true)
    {
        <h5 class="text-success mb-3">Listado de Asociaciones</h5>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre de la Asociación</th>
                    <th>Folio</th>
                    <th>Fecha de Creación</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in asociaciones)
                {
                    <tr>
                        <td>@a.NombreAsociacion</td>
                        <td>@a.Folio</td>
                        <td>@(a.FechaResolucion.ToString("dd/MM/yyyy") ?? "-")</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-primary"
                                    @onclick="() => EditarAsociacion(a.AsociacionId)">
                                <i class="bi bi-pencil-square"></i> Editar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (tipoSeleccionado == "Asociaciones" && !cargando && (asociaciones == null || !asociaciones.Any()))
    {
        <div class="alert alert-warning mt-3">No hay asociaciones registradas.</div>
    }

    <!-- Indicador de carga -->
    @if (cargando)
    {
        <div class="alert alert-info mt-3">
            <i class="bi bi-hourglass-split"></i> Cargando información...
        </div>
    }

    <!-- Mensaje inicial -->
    @if (string.IsNullOrEmpty(tipoSeleccionado) && !cargando)
    {
        <div class="alert alert-secondary mt-3">
            <i class="bi bi-info-circle"></i> Seleccione una opción para mostrar los registros.
        </div>
    }
</div>

@code {
    private string? tipoSeleccionado;
    private bool cargando = false;

    private List<TbComite>? comites;
    private List<TbAsociacion>? asociaciones;

    protected override void OnInitialized()
    {
        tipoSeleccionado = null;
    }

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        if (string.IsNullOrEmpty(tipoSeleccionado))
        {
            comites = null;
            asociaciones = null;
            return;
        }

        cargando = true;
        StateHasChanged();

        try
        {
            if (tipoSeleccionado == "Comites")
            {
                comites = await _context.TbComite
                    .OrderByDescending(c => c.FechaRegistro)
                    .ToListAsync();
                asociaciones = null;
            }
            else if (tipoSeleccionado == "Asociaciones")
            {
                asociaciones = await _context.TbAsociacion
                    .OrderByDescending(a => a.FechaResolucion)
                    .ToListAsync();
                comites = null;
            }
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void EditarComite(int id)
    {
        NavigationManager.NavigateTo($"/editcomite/{id}");
    }

    private void EditarAsociacion(int id)
    {
        NavigationManager.NavigateTo($"/editasociacion/{id}");
    }
}