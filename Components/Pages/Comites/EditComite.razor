@page "/comites/editcomite/{id:int}"
@layout EmptyLayout
@attribute [Authorize(Roles = "user_admin, user_estandar")]
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@using REGISTROLEGAL.Repositories.Interfaces
@using REGISTROLEGAL.Models.LegalModels

<PageTitle>Editar Comité</PageTitle>

<h3 class="mb-3">Editar Comité de Salud</h3>

@if (cargando)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Cargando datos del comité... (ID: @id)</p>
    </div>
}
else if (cModel == null)
{
    <div class="alert alert-danger">No se encontró el comité con el ID: @id</div>
}
else
{
    <EditForm Model="cModel" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary Class="alert alert-danger" />

        @if (!string.IsNullOrEmpty(mensajeExito))
        {
            <div class="alert alert-success">@mensajeExito</div>
        }
        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert alert-danger">@mensajeError</div>
        }

        <div class="card shadow-sm p-4">
            <h5 class="mb-3 text-primary">Datos Generales</h5>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre del Comité *</label>
                    <InputText class="form-control" @bind-Value="cModel.NombreComiteSalud" />
                    <ValidationMessage For="@(() => cModel.NombreComiteSalud)" class="text-danger small" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Comunidad *</label>
                    <InputText class="form-control" @bind-Value="cModel.Comunidad" />
                    <ValidationMessage For="@(() => cModel.Comunidad)" class="text-danger small" />
                </div>
            </div>

            <!-- Ubicación Geográfica -->
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Región de Salud *</label>
                    <InputSelect class="form-select" @bind-Value="cModel.RegionSaludId" @onchange="async (e) => await OnRegionChanged(e)">
                        <option value="">-- Seleccione --</option>
                        @foreach (var region in regiones)
                        {
                            <option value="@region.Id">@region.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => cModel.RegionSaludId)" class="text-danger small" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Provincia *</label>
                    <InputSelect class="form-select" @bind-Value="cModel.ProvinciaId" @onchange="async (e) => await OnProvinciaChanged(e)">
                        <option value="">-- Seleccione --</option>
                        @foreach (var provincia in provincias)
                        {
                            <option value="@provincia.Id">@provincia.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => cModel.ProvinciaId)" class="text-danger small" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Distrito *</label>
                    <InputSelect class="form-select" @bind-Value="cModel.DistritoId" @onchange="async (e) => await OnDistritoChanged(e)">
                        <option value="">-- Seleccione --</option>
                        @foreach (var distrito in distritos)
                        {
                            <option value="@distrito.Id">@distrito.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => cModel.DistritoId)" class="text-danger small" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Corregimiento *</label>
                    <InputSelect class="form-select" @bind-Value="cModel.CorregimientoId">
                        <option value="">-- Seleccione --</option>
                        @foreach (var corregimiento in corregimientos)
                        {
                            <option value="@corregimiento.Id">@corregimiento.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => cModel.CorregimientoId)" class="text-danger small" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Número de Nota *</label>
                    <InputText class="form-control" @bind-Value="cModel.NumeroNota" />
                    <ValidationMessage For="@(() => cModel.NumeroNota)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Número de Resolución *</label>
                    <InputText class="form-control" @bind-Value="cModel.NumeroResolucion" />
                    <ValidationMessage For="@(() => cModel.NumeroResolucion)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Registro *</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaCreacion" />
                    <ValidationMessage For="@(() => cModel.FechaCreacion)" class="text-danger small" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Fecha de Elección *</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaEleccion" />
                    <ValidationMessage For="@(() => cModel.FechaEleccion)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Resolución *</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaResolucion" />
                    <ValidationMessage For="@(() => cModel.FechaResolucion)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tipo de Trámite *</label>
                    <InputSelect class="form-select" @bind-Value="cModel.TipoTramiteEnum">
                        <option value="@TipoTramite.Personeria">Personería</option>
                        <option value="@TipoTramite.CambioDirectiva">Cambio de Directiva</option>
                        <option value="@TipoTramite.JuntaInterventora">Junta Interventora</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => cModel.TipoTramiteEnum)" class="text-danger small" />
                </div>
            </div>

            <!-- Gestión de Archivos -->
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label">Documentos del Comité</label>
                    <div class="border rounded p-3 bg-light">
                        @if (cModel.Archivos?.Any() == true)
                        {
                            <h6>Archivos existentes:</h6>
                            <ul class="list-group">
                                @foreach (var archivo in cModel.Archivos)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-file-pdf text-danger me-2"></i>
                                            @archivo.NombreArchivo
                                            <small class="text-muted ms-2">(@archivo.SubidoEn.ToString("dd/MM/yyyy"))</small>
                                        </div>
                                        <div>
                                            <a href="@archivo.RutaArchivo" target="_blank" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => EliminarArchivo(archivo.ComiteArchivoId)">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No hay archivos adjuntos.</p>
                        }
                        
                        <hr class="my-3">
                        
                        <h6>Agregar nuevos archivos:</h6>
                        <InputFile OnChange="CargarNuevosArchivos" multiple accept=".pdf" class="form-control" />
                        <small class="form-text text-muted">Formatos permitidos: PDF (máximo 50MB por archivo)</small>
                        
                        @if (nuevosArchivos?.Any() == true)
                        {
                            <div class="mt-2">
                                <h6>Archivos a agregar:</h6>
                                <ul class="list-group">
                                    @foreach (var archivo in nuevosArchivos)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @archivo.Name
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    @onclick="() => RemoverNuevoArchivo(archivo)">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <hr />
            <h5 class="mb-3 text-primary">Miembros del Comité</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nombre *</th>
                            <th>Apellido *</th>
                            <th>Cédula *</th>
                            <th>Cargo *</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cModel.Miembros != null && cModel.Miembros.Any())
                        {
                            @foreach (var (miembro, index) in cModel.Miembros.Select((m, i) => (m, i + 1)))
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.NombreMiembro" />
                                        <ValidationMessage For="@(() => miembro.NombreMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.ApellidoMiembro" />
                                        <ValidationMessage For="@(() => miembro.ApellidoMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.CedulaMiembro" />
                                        <ValidationMessage For="@(() => miembro.CedulaMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputSelect class="form-select form-select-sm" @bind-Value="miembro.CargoId">
                                            <option value="0">-- Seleccione --</option>
                                            @foreach (var cargo in cargos)
                                            {
                                                <option value="@cargo.Id">@cargo.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => miembro.CargoId)" class="text-danger small" />
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                @onclick="() => EliminarMiembro(miembro)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No hay miembros registrados</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-end mb-3">
                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AgregarMiembro">
                    <i class="bi bi-plus-circle"></i> Agregar Miembro
                </button>
            </div>

            <div class="text-end mt-4">
                <button type="button" class="btn btn-secondary me-2" @onclick="Volver">
                    <i class="bi bi-arrow-left"></i> Volver
                </button>
                <button type="submit" class="btn btn-primary" disabled="@guardando">
                    @if (guardando)
                    {
                        <span>
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                            Guardando...
                        </span>
                    }
                    else
                    {
                        <span><i class="bi bi-save"></i> Guardar Cambios</span>
                    }
                </button>
            </div>
        </div>
    </EditForm>
}

