@page "/comites/editcomite/{id:int}"
@layout EmptyLayout
@attribute [Authorize(Roles = "user_admin, user_estandar")]
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@using REGISTROLEGAL.Repositories.Interfaces
@using REGISTROLEGAL.Models.LegalModels

<PageTitle>Editar Comité</PageTitle>

<h3 class="mb-3">Editar Comité de Salud</h3>

@if (cargando)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Cargando datos del comité... (ID: @id)</p>
    </div>
}
else if (cModel == null)
{
    <div class="alert alert-danger">No se encontró el comité con el ID: @id</div>
}
else
{
    <EditForm Model="cModel" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary Class="alert alert-danger" />

        @if (!string.IsNullOrEmpty(mensajeExito))
        {
            <div class="alert alert-success">@mensajeExito</div>
        }
        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert alert-danger">@mensajeError</div>
        }

        <div class="card shadow-sm p-4">
            <h5 class="mb-3 text-primary">Datos Generales</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre del Comité *</label>
                    <InputText class="form-control" @bind-Value="cModel.NombreComiteSalud" />
                    <ValidationMessage For="@(() => cModel.NombreComiteSalud)" class="text-danger small" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Comunidad *</label>
                    <InputText class="form-control" @bind-Value="cModel.Comunidad" />
                    <ValidationMessage For="@(() => cModel.Comunidad)" class="text-danger small" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Número de Resolución *</label>
                    <InputText class="form-control" @bind-Value="cModel.NumeroResolucion" />
                    <ValidationMessage For="@(() => cModel.NumeroResolucion)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Resolución *</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaResolucion" />
                    <ValidationMessage For="@(() => cModel.FechaResolucion)" class="text-danger small" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Elección *</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaEleccion" />
                    <ValidationMessage For="@(() => cModel.FechaEleccion)" class="text-danger small" />
                </div>
            </div>

            <hr />
            <h5 class="mb-3 text-primary">Miembros del Comité</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nombre *</th>
                            <th>Apellido *</th>
                            <th>Cédula *</th>
                            <th>Cargo *</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cModel.Miembros != null && cModel.Miembros.Any())
                        {
                            @foreach (var (miembro, index) in cModel.Miembros.Select((m, i) => (m, i + 1)))
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.NombreMiembro" />
                                        <ValidationMessage For="@(() => miembro.NombreMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.ApellidoMiembro" />
                                        <ValidationMessage For="@(() => miembro.ApellidoMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputText class="form-control form-control-sm" @bind-Value="miembro.CedulaMiembro" />
                                        <ValidationMessage For="@(() => miembro.CedulaMiembro)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputSelect class="form-select form-select-sm" @bind-Value="miembro.CargoId">
                                            <option value="0">-- Seleccione --</option>
                                            @foreach (var cargo in cargos)
                                            {
                                                <option value="@cargo.Id">@cargo.Name</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For="@(() => miembro.CargoId)" class="text-danger small" />
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No hay miembros registrados</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-end mt-4">
                <button type="button" class="btn btn-secondary me-2" @onclick="Volver">
                    <i class="bi bi-arrow-left"></i> Volver
                </button>
                <button type="submit" class="btn btn-primary" disabled="@guardando">
                    @if (guardando)
                    {
                        <span>
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                            Guardando...
                        </span>
                    }
                    else
                    {
                        <span><i class="bi bi-save"></i> Guardar Cambios</span>
                    }
                </button>
            </div>
        </div>
    </EditForm>
}