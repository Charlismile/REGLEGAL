@page "/comites/editcomite/{id:int}"
@layout EmptyLayout
@* @attribute [Authorize(Roles = "user_admin")] *@
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@using REGISTROLEGAL.Repositories.Interfaces

<PageTitle>Editar Comité</PageTitle>

<h3 class="mb-3">Editar Comité de Salud</h3>

@if (cargando)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Cargando datos del comité... (ID: @id)</p>
    </div>
}
else if (cModel == null)
{
    <div class="alert alert-danger">No se encontró el comité con el ID: @id</div>
}
else
{
    <EditForm Model="cModel" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="card shadow-sm p-4">
            <h5 class="mb-3 text-primary">Datos Generales</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre del Comité</label>
                    <InputText class="form-control" @bind-Value="cModel.NombreComiteSalud" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Comunidad</label>
                    <InputText class="form-control" @bind-Value="cModel.Comunidad" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Número de Resolución</label>
                    <InputText class="form-control" @bind-Value="cModel.NumeroResolucion" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Resolución</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaResolucion" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha de Elección</label>
                    <InputDate class="form-control" @bind-Value="cModel.FechaEleccion" />
                </div>
            </div>
            <hr />
            <h5 class="mb-3 text-primary">Miembros del Comité</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nombre Completo</th>
                            <th>Cédula</th>
                            <th>Cargo</th>
                            <th>Teléfono</th>
                            <th>Correo Electrónico</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (cModel.Miembros != null && cModel.Miembros.Any())
                        {
                            @foreach (var (miembro, index) in cModel.Miembros.Select((m, i) => (m, i + 1)))
                            {
                                <tr>
                                    <td>@index</td>
                                    <td><InputText class="form-control" @bind-Value="miembro.NombreMiembro" /></td>
                                    <td><InputText class="form-control" @bind-Value="miembro.ApellidoMiembro" /></td>
                                    <td><InputText class="form-control" @bind-Value="miembro.CedulaMiembro" /></td>
                                    <td><InputText class="form-control" @bind-Value="miembro.NombreCargo" /></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No hay miembros registrados</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-end mt-4">
                <button type="button" class="btn btn-secondary me-2" @onclick="Volver">
                    <i class="bi bi-arrow-left"></i> Volver
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
            </div>
        </div>
    </EditForm>
}
