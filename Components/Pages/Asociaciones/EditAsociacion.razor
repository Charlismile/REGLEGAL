@page "/asociaciones/editasociacion/{id:int}"
@layout EmptyLayout
@* @attribute [Authorize(Roles = "user_admin")] *@
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@using REGISTROLEGAL.Repositories.Interfaces
@inject IRegistroAsociacion AsociacionService
@inject NavigationManager Navigation

<PageTitle>Editar Asociación</PageTitle>

<h3 class="mb-3">Editar Asociación</h3>

@if (cargando)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Cargando datos de la asociación... (ID: @id)</p>
    </div>
}
else if (aModel == null)
{
    <div class="alert alert-danger">No se encontró la asociación con el ID: @id</div>
}
else
{
    <EditForm Model="@aModel" OnValidSubmit="@Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="card shadow-sm p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre de la Asociación</label>
                    <InputText class="form-control" @bind-Value="aModel.NombreAsociacion" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Nombre Representante Legal</label>
                    <InputText class="form-control" @bind-Value="aModel.NombreRepLegal" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Apellido Representante Legal</label>
                    <InputText class="form-control" @bind-Value="aModel.ApellidoRepLegal" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Nombre Apoderado Legal</label>
                    <InputText class="form-control" @bind-Value="aModel.NombreApoAbogado" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Apellido Apoderado Legal</label>
                    <InputText class="form-control" @bind-Value="aModel.ApellidoApoAbogado" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Número de Resolución</label>
                    <InputText class="form-control" @bind-Value="aModel.NumeroResolucion" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Fecha de Resolución</label>
                    <InputDate class="form-control" @bind-Value="aModel.FechaResolucion" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Actividad</label>
                    <InputText class="form-control" @bind-Value="aModel.Actividad" />
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="button" class="btn btn-secondary me-2" @onclick="Volver">
                    <i class="bi bi-arrow-left"></i> Volver
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
            </div>
        </div>
    </EditForm>
}
