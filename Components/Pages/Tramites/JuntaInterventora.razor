@page "/tramites/junta-interventora"
@page "/tramites/junta-interventora/{ComiteId:int}"
@attribute [Authorize(Roles = "user_admin, user_estandar")]
@using Microsoft.AspNetCore.Authorization
@using REGISTROLEGAL.Components.Layout
@using REGISTROLEGAL.Models.LegalModels
@layout EmptyLayout

<EditForm EditContext="editContext" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit" class="formulario-comite shadow-sm rounded p-4 bg-white">
    @* <DataAnnotationsValidator /> *@
    @if (erroresFormulario.Any())
    {
        <ul class="alert alert-danger">
            @foreach (var err in erroresFormulario)
            {
                <li>@err</li>
            }
        </ul>
    }

    <h3 class="titulo-form">Registro de Comité de Salud - Junta Interventora</h3>

    <!-- Autocomplete de Comités (solo Personería) -->
    <div class="mb-3 position-relative">
        <label class="form-label">Buscar Comité con Personería *</label>
        <input type="text"
               class="form-control"
               placeholder="Escriba para buscar..."
               @bind="SearchText"
               @bind:event="oninput" />
        @if (sugerencias?.Any() == true)
        {
            <ul class="list-group position-absolute w-100 z-10" style="max-height: 200px; overflow-y: auto;">
                @foreach (var s in sugerencias)
                {
                    <li class="list-group-item list-group-item-action"
                        @onclick="() => SeleccionarComite(s)">
                        @s.NombreComiteSalud (@s.Comunidad)
                    </li>
                }
            </ul>
        }
        @if (!string.IsNullOrEmpty(MensajeBusqueda))
        {
            <small class="text-muted">@MensajeBusqueda</small>
        }
    </div>

    <!-- Fecha de Elección -->
    <div class="mb-3">
        <label>Fecha de Elección:</label>
        <InputDate @bind-Value="CModel.FechaEleccion" class="form-control" />
        <ValidationMessage For="() => CModel.FechaEleccion" />
    </div>

    <!-- Miembros actuales (solo lectura) -->
    <hr />
    <h3>Miembros Actuales del Comité</h3>
    @if (miembrosActuales.Any())
    {
        <div class="table-responsive">
            <table class="table table-sm table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cédula</th>
                        <th>Cargo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in miembrosActuales)
                    {
                        <tr>
                            <td>@m.NombreMiembro</td>
                            <td>@m.ApellidoMiembro</td>
                            <td>@m.CedulaMiembro</td>
                            <td>@(Cargos.FirstOrDefault(c => c.Id == m.CargoId)?.Name ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No hay miembros registrados en el comité seleccionado.</p>
    }

    <!-- Nuevos Interventores -->
    <hr />
    <h3>Interventores</h3>
    <div>
        @if (interventoresDesplegados)
        {
            @for (int i = 0; i < CModel.MiembrosInterventores.Count; i++)
            {
                var miembro = CModel.MiembrosInterventores[i];
                <div class="row g-2 align-items-center mb-2" @key="miembro">
                    <div class="col-md-3">
                        <InputText class="form-control" placeholder="Nombre *" @bind-Value="miembro.NombreMiembro" />
                    </div>
                    <div class="col-md-3">
                        <InputText class="form-control" placeholder="Apellido *" @bind-Value="miembro.ApellidoMiembro" />
                    </div>
                    <div class="col-md-3">
                        <InputText class="form-control" placeholder="Cédula *" @bind-Value="miembro.CedulaMiembro" />
                    </div>
                    <div class="col-md-3">
                        <InputSelect class="form-select" @bind-Value="miembro.CargoId">
                            <option value="0">--Cargo--</option>
                            @foreach (var cargo in CargosInterventores)
                            {
                                <option value="@cargo.Id">@cargo.Name</option>
                            }
                        </InputSelect>
                    </div>
                </div>
            }
        }
        else
        {
            <br />
            <button type="button" class="btn btn-primary mt-2" @onclick="DesplegarInterventores" disabled="@(ComiteSeleccionadoId == null)">
                <i class="bi bi-plus-circle"></i> Agregar Interventores
            </button>
        }
    </div>

    <hr />
    <fieldset class="bloque-form">
        <div class="mb-3">
            <label>Número de Resolución:</label>
            <InputText @bind-Value="CModel.NumeroResolucion" class="form-control" />
            <ValidationMessage For="() => CModel.NumeroResolucion" />
        </div>
        <div class="mb-3">
            <label>Fecha de Resolución:</label>
            <InputDate @bind-Value="CModel.FechaResolucion" class="form-control" />
            <ValidationMessage For="() => CModel.FechaResolucion" />
        </div>
        <legend>Archivo de Resolución</legend>
        <InputFile OnChange="CargarDocumentos" multiple accept=".pdf" />
        <ul>
            @foreach (var doc in ArchivosSeleccionados)
            {
                <li>
                    @doc.Name
                    <button type="button" class="btn btn-sm btn-danger" @onclick="() => RemoverArchivoPendiente(doc)">
                        Quitar
                    </button>
                </li>
            }
        </ul>
        @if (!string.IsNullOrEmpty(_archivoResolucionUrl))
        {
            <div class="mt-2">
                <label>Vista previa del archivo guardado:</label>
                <a href="@_archivoResolucionUrl" target="_blank">Abrir resolución</a>
            </div>
        }
    </fieldset>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary px-4" disabled="@(!PuedeGuardar())">
            @(IsSubmitting ? "Registrando..." : "Registrar Junta Interventora")
        </button>
        <button type="button" class="btn btn-outline-secondary px-4" @onclick="Cancelar" disabled="@IsSubmitting">
            Cancelar
        </button>
    </div>

    @if (!string.IsNullOrEmpty(MensajeError) || !string.IsNullOrEmpty(MensajeExito))
    {
        <div class="alert @(!string.IsNullOrEmpty(MensajeError) ? "alert-danger" : "alert-success") mt-3">
            @MensajeError @MensajeExito
        </div>
    }
</EditForm>
